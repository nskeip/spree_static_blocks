<div data-hook="admin_block_form_fields">
  <div class="left eight columns alpha" data-hook="admin_block_form_left">

    <%= f.field_container :code do %>
      <%= f.label :code %> <span class="required">*</span><br />
      <%= f.text_field :code, :class => 'fullwidth title' %>
      <%= f.error_message_on :code %>
    <% end %>

    <%= f.field_container :text do %>
      <%= f.label :text %><br />
      <%= f.text_area :text, {rows: 12, :class => 'fullwidth'} %>
      <%= f.error_message_on :text %>
    <% end %>

  </div>
  
  <div class="clear"></div>
  <div data-hook="admin_block_form_additional_fields"></div>
  <div class="clear"></div>
</div>
